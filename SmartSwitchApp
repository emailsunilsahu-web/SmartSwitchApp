.github/workflows/android-build.yml
name: Build Debug APK

on:
  push:
    branches: [ main, master ]
  workflow_dispatch:

jobs:
  build-apk:
    runs-on: ubuntu-latest
    env:
      ANDROID_SDK_ROOT: ${{ runner.temp }}/android-sdk

    steps:
      - uses: actions/checkout@v4

      - name: Set up JDK 17
        uses: actions/setup-java@v4
        with:
          distribution: temurin
          java-version: '17'

      - name: Install system deps
        run: |
          sudo apt-get update -y
          sudo apt-get install -y wget unzip

      - name: Install Gradle CLI (needed to create gradle wrapper if missing)
        run: |
          wget https://services.gradle.org/distributions/gradle-8.5-bin.zip -O /tmp/gradle.zip
          sudo unzip -qq /tmp/gradle.zip -d /opt/
          echo "/opt/gradle-8.5/bin" | sudo tee /etc/profile.d/gradle.sh
          sudo chmod +x /etc/profile.d/gradle.sh
          export PATH=$PATH:/opt/gradle-8.5/bin
          gradle -v

      - name: Install Android command-line tools & SDK Platform 35
        run: |
          mkdir -p $ANDROID_SDK_ROOT/cmdline-tools
          wget https://dl.google.com/android/repository/commandlinetools-linux-9477386_latest.zip -O /tmp/cmdline-tools.zip
          unzip -q /tmp/cmdline-tools.zip -d /tmp/cmdline-tools
          mv /tmp/cmdline-tools/cmdline-tools $ANDROID_SDK_ROOT/cmdline-tools/latest
          export PATH=$ANDROID_SDK_ROOT/cmdline-tools/latest/bin:$PATH
          yes | $ANDROID_SDK_ROOT/cmdline-tools/latest/bin/sdkmanager --sdk_root=$ANDROID_SDK_ROOT --licenses
          $ANDROID_SDK_ROOT/cmdline-tools/latest/bin/sdkmanager --sdk_root=$ANDROID_SDK_ROOT "platform-tools" "platforms;android-35" "build-tools;35.0.0"

      - name: Make Gradle wrapper (if missing) and assemble Debug APK
        run: |
          if [ ! -f ./gradlew ]; then
            gradle wrapper
          fi
          chmod +x ./gradlew
          ./gradlew --no-daemon assembleDebug -Pandroid.sdk.path=$ANDROID_SDK_ROOT

      - name: Upload Debug APK
        uses: actions/upload-artifact@v4
        with:
          name: SmartSwitch-app-debug-apk
          path: app/build/outputs/apk/debug/*.apk
